<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center">
    <TableRow>
    	<ImageButton
    		android:id="@+id/one"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_one"/>
    	<ImageButton
    		android:id="@+id/two"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_two"/>
    	<ImageButton
    		android:id="@+id/three"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_three"/>

    </TableRow>
    
    <TableRow>
    	<ImageButton
    		android:id="@+id/four"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_four"/>
    	<ImageButton
    		android:id="@+id/five"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_five"/>
    	<ImageButton
    		android:id="@+id/six"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_six"/>

    </TableRow>
    
    <TableRow>
    	<ImageButton
    		android:id="@+id/seven"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_seven"/>
    	<ImageButton
    		android:id="@+id/eight"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_eight"/>
    	<ImageButton
    		android:id="@+id/nine"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_nine"/>

    </TableRow>
    
    <TableRow>
    	<ImageButton
    		android:id="@+id/blank1"
    		android:visibility="invisible"
    		android:src="@drawable/keypad_one"/>
    	<ImageButton
    		android:id="@+id/zero"
    		android:background="@null"
    		android:padding="10px"
    		android:src="@drawable/keypad_zero"/>
    	<ImageButton
    		android:id="@+id/blank2"
    		android:visibility="invisible"
    		android:src="@drawable/keypad_one"/>

    </TableRow>

    
</TableLayout>